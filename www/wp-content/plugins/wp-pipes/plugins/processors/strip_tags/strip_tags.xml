<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="wppipes-processor" method="upgrade">
	<name>Strip Tags</name>
	<author>thimpress.com</author>
	<creationDate>Mar 2013</creationDate>
	<copyright>Â© 2007-2012 thimpress.com. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html</license>
	<authorEmail>info@thimpress.com</authorEmail>
	<authorUrl>http://www.thimpress.com</authorUrl>
	<version>2.2</version>
	<description>WPPipes Processor Strip Tags</description>
	<files>
		<filename plugin="strip_tags">strip_tags.php</filename>
		<filename>CHANGELOG</filename>
		<filename>LICENSE</filename>
		<filename>README</filename>
		<filename>index.html</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="strip_tag" type="text" size="35" default="*" label="Strip tags" class="strip_tag"
					   description="Strip tags (a,div,span...,*)"/>
				<field name="ignore" type="text" size="35" default="div,p,a,img" label="Ignore" class="ignore"
					   description="ignore tags if Strip tags is *"/>
				<field name="note" type="hidden" default=""/>
			</fieldset>
		</fields>
	</config>
</extension>